<%- include("../partials/header") %>

<h3>Edit Cohort</h3>

<form method="POST" action="/cohorts/<%=post.id%>">
    <input type="hidden" name="_method" value="PATCH">
    <div class="form-group">
        <input type="text" class='form-control' name="title" placeholder="Enter the name" value="<%=post.name %>"/>
    </div>

    <div class="form-group">
        <input type="url" name="logoUrl" class="form-control" placeholder="e.g. http://imgur.com/pic.jpg" value="<%=post.logoUrl %>"/> 
    </div>

    <div class="form-group">
        <textarea class="form-control" name="members" placeholder="What are the members"><%=post.members %></textarea>    
    </div>
    
    <input type="submit" class='btn btn-outline-success' value="Submit"/>
</form>

<%- include("../partials/footer") %>